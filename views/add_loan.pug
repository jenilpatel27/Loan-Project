extends layout

block content
  h1 #{title}
  form(method='POST', action='/loan/add')
    .form-group
      label Loan:
      input.form-control(name='loan', type='text')
    .form-group
      label Amount:
      input.form-control(name='amount', type='text')
    .form-group
      label Description:
      textarea.form-control(name='description')
    br
    input.btn.btn-primary(type='submit', value='Submit')
