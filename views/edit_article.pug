extends layout

block content
  h1 #{title}
  form(method='POST', action='/loan/edit/'+loan._id)
    .form-group
      label Loan:
      input.form-control(name='loan', type='text', value=loan.loan)
    .form-group
      label Amount:
      input.form-control(name='amount', type='text', value=loan.amount)
    .form-group
      label Description:
      textarea.form-control(name='description')= loan.description
    br
    input.btn.btn-primary(type='submit', value='Submit')
